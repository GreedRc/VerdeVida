  <!-- Carrinho -->
  <section class="p-6 bg-blur rounded-xl shadow-lg m-6">
    <h2 class="text-2xl font-bold text-green-800 mb-4">🛍️ Carrinho de Compras</h2>
    <ul id="carrinho" class="mb-4 text-gray-700"></ul>
    <p class="font-semibold">Total: R$ <span id="total">0.00</span></p>
  </section>

  <!-- Footer -->
  <footer class="bg-green-700 text-white text-center p-4">
    <p>&copy; 2025 Supermercado Verde Vida 🌱 | Saúde e Sustentabilidade</p>
  </footer>

  <!-- Script Carrinho -->
  <script>
    let total = 0;
    let itens = {};

    function adicionarCarrinho(produto, preco) {
      if (itens[produto]) {
        itens[produto].quantidade++;
      } else {
        itens[produto] = { preco, quantidade: 1 };
      }
      total += preco;
      atualizarCarrinho();
    }

    function removerCarrinho(produto) {
      if (itens[produto]) {
        total -= itens[produto].preco;
        itens[produto].quantidade--;
        if (itens[produto].quantidade === 0) {
          delete itens[produto];
        }
        atualizarCarrinho();
      }
    }

    function atualizarCarrinho() {
      const lista = document.getElementById("carrinho");
      lista.innerHTML = "";
      for (let produto in itens) {
        const item = itens[produto];
        const li = document.createElement("li");
        li.classList.add("flex", "justify-between", "items-center", "mb-2");

        li.innerHTML = `
          <span>${produto} (x${item.quantidade}) - R$ ${(item.preco * item.quantidade).toFixed(2)}</span>
          <button onclick="removerCarrinho('${produto}')" 
                  class="bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600">
            Remover
          </button>
        `;
        lista.appendChild(li);
      }
      document.getElementById("total").textContent = total.toFixed(2);
    }
  </script>
